{
    "compilerOptions": {
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "outDir": "dist",
      "rootDir": ".",
      "inlineSourceMap": true,
      "target": "es5",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": ["es6", "dom"],
      "baseUrl": "",
      "skipLibCheck": true
    },
    "exclude": [
      "node_modules/**/*",
      "dist/**/*"
    ]
}
